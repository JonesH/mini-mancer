# Test Configuration for Mini-Mancer
# Copy this to .env and configure for your setup

# Bot tokens (required for real API testing)
BOT_TOKEN=your_factory_bot_token_here
BOT_TOKEN_1=your_created_bot_token_here

# Test chat configuration (required for real API testing)
TEST_CHAT_ID=your_test_chat_id_here
TEST_USER_ID=your_test_user_id_here

# NEW: Test behavior configuration
# Set to true to run tests without sending real Telegram messages
TEST_MOCK_MODE=false

# Set to false to disable message cleanup (useful for debugging)
TEST_CLEANUP_MESSAGES=true

# Delay between test messages in seconds (reduce spam)
TEST_MESSAGE_DELAY=1.0

# Example mock mode configuration (no real messages sent):
# TEST_MOCK_MODE=true
# TEST_CLEANUP_MESSAGES=false
# TEST_MESSAGE_DELAY=0.1